{
  "scripts": {
    "start": "parcel src/index.html",
    "build": "parcel build --no-source-maps src/index.html -d ./",
    "prebuild": "rm -f index.html && rm -f src.*.js",
    "deploy": "git add index.html src.*.js && git commit -m 'Update site'"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn build && yarn deploy"
    }
  },
  "gh-pages-deploy": {
    "staticpath": "dist",
    "commit": "Update site",
    "noprompt": true
  },
  "dependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "styled-components": "^4.1.3",
    "styled-icons": "^6.4.0"
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.4.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.3",
    "gh-pages-deploy": "^0.5.1",
    "husky": "^1.3.1",
    "parcel-bundler": "^1.11.0",
    "prettier": "^1.15.3"
  }
}
